@model List<Product>


    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                    Product List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Create new product
                </a>
            </div>
        </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Price2</th>
        <th>Category</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model){
        <tr>
            <td>
                @obj.Title
            </td>
            <td>
                @obj.Description
            </td>
            <td>
                @obj.Price
            </td>
            <td>
                @obj.Price2
            </td>
            <td>
                @obj.Category.Name
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.ProductId" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ProductId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

</div>